# Enable VIA support (so you can still remap in the VIA app)
VIA_ENABLE = yes

# Enable per-key RGB Matrix effects (required for rgb_matrix_indicators_user)
RGB_MATRIX_ENABLE = yes

# Some boards also expose this — if you see compile errors, try commenting it out
RGBLIGHT_ENABLE = no

# Optional: makes firmware smaller if you don’t use console/extra features
CONSOLE_ENABLE = no
COMMAND_ENABLE = no